div
    article
        section
            div.text.center
                h3 Рабочий день в ДИТ...
            div.tile
                div.text.center#flex-text
                    span ожидание
                    span vs.
                    span реальность
                div#compare-image
                    v-compare-image.compare-image(
                        leftImage="right.jpg"
                        rightImage="left.jpg"
                        :sliderPositionPercentage="0.5"
                        :sliderLineWidth="4"
                        hover
                    )
        section
            div.tile#game
                blockrain(
                    @update:score="onScore"
                )
            div.text.center
                h3 Результат - {{ score }}
                a.btn(:href="mailTo")
                    span Поделиться
            div.tile#happy-new-year
                img(src="~/assets/2020.png")
                